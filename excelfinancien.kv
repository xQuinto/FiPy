<MyGrid>:

    inkomsten: inkomsten  # Global variable name references the id name
    uitgaven: uitgaven  # Global variable email references the id email

    GridLayout:
        cols:1
        size: root.width - 200, root.height - 200
        pos: 100, 100

        GridLayout:
            cols:2

            Label:
                text: "Inkomsten: "

            TextInput:
                id: inkomsten
                multiline:False

            Label:
                text: "Uitgaven (zonder spaarrekening): "

            TextInput:
                id: uitgaven
                multiline:False

        Button:
            text:"Check finances"
            on_press: root.btn()

